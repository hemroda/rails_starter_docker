<% if flash[:notice] || flash[:alert] %>
  <div class="fixed inset-x-0 bottom-14	md:bottom-0 flex items-end justify-right px-4 py-6 sm:p-6 justify-end z-30 pointer-events-none" style="z-index: 9999 !important">
    <div data-controller="alert" class="max-w-sm w-full shadow-lg rounded px-4 py-3 rounded relative <%= flash_class(level) %> text-white pointer-events-auto">
      <div class="p-2">
        <div class="flex items-start">
          <%= heroicon "information-circle", options: { class: "flex-shrink-0 w-5 h-5 mr-1 pt-1 #{ flash_class(level) }", disable_default_class: true } %>
          <div class="ml-3 w-0 flex-1 pt-0.5">
            <div class="text-sm leading-5 font-medium <%= flash_class(level) %> ">
              <%= flash[:notice] %>
              <%= flash[:alert] %>
            </div>
          </div>
          <div class="ml-4 flex-shrink-0 flex">
            <button data-action="alert#close"
                    class="inline-flex text-white focus:outline-none focus:text-gray-300 transition ease-in-out h-8 w-8
                          duration-150 focus:ring-2  p-1.5 inline-flex rounded-lg <%= flash_close_btn_class(level) %>">
              <%= heroicon "x-circle", options: { class: "w-5 h-5 inline-block #{ flash_class(level) }", disable_default_class: true } %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>