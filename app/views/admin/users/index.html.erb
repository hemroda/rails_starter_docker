<div>
  <div class="md:flex justify-between items-center mt-2 p-3 bg-slate-900">
    <div><h2 class="text-slate-300 font-bold text-2xl">Users</h2></div>
    <div><%= render partial: "admin/shared/search_form" %></div>
    <div>
      <%= link_to "+ New user", new_admin_user_path, class: "text-slate-300 hover:text-orange-800" if current_user.admin? %>
    </div>
  </div>
  <table class="w-full table-auto bg-white text-slate-300 bg-slate-900 mt-5 px-6 py-8 ring-1 ring-slate-900/5 shadow-xl">
    <thead>
    <tr class="text-left text-base font-medium tracking-tight">
      <th class="p-3">Name</th>
      <th class="hidden md:table-cell">Email</th>
      <th class="hidden md:table-cell">Role</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr class="text-sm">
        <td class="p-3"><%= link_to user.full_name, admin_user_path(user), class: "hover:text-orange-800" %></td>
        <td class="hidden md:table-cell"><%= link_to user.email, admin_user_path(user), class: "hover:text-orange-800" %></td>
        <td class="hidden md:table-cell"><%= user.role %></td>
        <td>
          <%= render partial: "admin/shared/actions_links",
                     locals: { edit_link: edit_admin_user_path(user),
                               delete_link: admin_user_path(user),
                               confirmation_message: "Do you want to delete this user?" } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= render partial: "admin/shared/pagy" %>
</div>