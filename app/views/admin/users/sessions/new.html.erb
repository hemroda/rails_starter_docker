<section class="h-screen flex justify-center">
  <div class="container px-6 py-12 h-full">
    <div class="flex justify-center items-center flex-wrap h-full g-6 text-gray-800">
      <div class="md:w-8/12 lg:w-5/12 max-w-sm">

        <h2 class="mb-4 text-center font-bold text-2xl">Admin</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div id="flash-container">
            <% flash.each do |key, value| %>
              <%= render "shared/flash", level: key, content: value %>
            <% end %>
          </div>

          <div class="form-inputs">
            <%= f.input :email, label: false, required: false, autofocus: true, placeholder: "nom.prenom@email.com",
                        wrapper_html: { class: "mb-6" },
                        input_html: { class: "block w-full px-4 py-2 text-xl font-normal text-gray-900 bg-white
                                              bg-clip-padding border border-solid border-gray-900 transition
                                              ease-in-out m-0 focus:text-gray-900 focus:bg-white focus:border-orange-800
                                              focus:outline-none rounded-lg", autocomplete: "email" } %>
            <%= f.input :password, label: false,
                        required: false,
                        input_html: {
                          class: "block w-full px-4 py-2 text-xl font-normal text-gray-900 bg-white
                                  bg-clip-padding border border-solid border-gray-900 transition ease-in-out m-0
                                  focus:text-gray-900 focus:bg-white focus:border-orange-800 focus:outline-none rounded-lg",
                          autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean, label: "#{ I18n.t('devise.remember')}",
                        wrapper_html: { class: "my-4 form-group form-check" },
                        label_html: { class: "form-check-label inline-block text-gray-800 cursor-pointer" },
                        input_html: {
                          class: "appearance-none h-4 w-4 border border-gray-300 bg-white checked:bg-orange-800
                                  checked:border-orange-900 focus:outline-none transition duration-200 mt-1 align-top
                                  bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer rounded-lg" } if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "#{ I18n.t('devise.sign_in')}",
                         class: "px-7 py-3 text-grey-900 font-medium text-sm leading-snug uppercase shadow-md
                                 hover:shadow-lg focus:shadow-lg border border-gray-900 focus:outline-none focus:ring-0
                                 active:shadow-lg transition duration-150 ease-in-out w-full flex justify-center
                                 items-center cursor-pointer rounded-lg", data: {turbo: false} %>
          </div>
        <% end %>

        <div class="flex items-center my-4 before:flex-1 before:border-t before:border-gray-300 before:mt-0.5
                    after:flex-1 after:border-t after:border-gray-300 after:mt-0.5">
          <p class="text-center font-semibold mx-4 mb-0 uppercase"><%= I18n.t("devise.or") %></p>
        </div>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <p class="text-center mt-6">
            <%= link_to "#{ I18n.t('devise.passwords.forgotten') }", new_password_path(resource_name),
                        class: "text-blue-600 hover:text-blue-700 focus:text-blue-700 active:text-blue-800 duration-200
                        transition ease-in-out" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>