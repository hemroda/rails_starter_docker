<div class="bg-slate-900 p-8 pt-7 mt-3">
  <%= simple_form_for [:admin, @user], html: { class: "" }, local: true do |f| %>

    <%= render "admin/shared/form_errors", object: @user %>

    <div class="flex mt-3">
      <%= f.input :first_name, label: false, placeholder: "First name",
                  wrapper_html: { class: "mr-3" },
                  input_html: { class: "basic-input" } %>
      <%= f.input :last_name, label: false, placeholder: "Last name",
                  input_html: { class: "w-full appearance-none border border-gray-300 py-1 px-2 bg-white text-gray-700 placeholder-gray-400 shadow-sm
    focus:outline-none focus:ring-2 focus:ring-sky-600 focus:border-transparent" } %>
    </div>
    <div class="flex mt-3">
      <%= f.input :email, label: false, placeholder: "Email",
              wrapper_html: { class: "mr-3" },
              input_html: { class: "basic-input" } %>
      <%= f.input :phone_number, label: false, placeholder: "Phone number",
                  wrapper_html: { class: "mr-3" },
                  input_html: { class: "basic-input" } %>
    </div>
    <% if current_user.admin? %>
      <%= f.input :role, as: :select, label: false, placeholder: "Role",
                  collection: User.roles.keys.collect { |s| [s.humanize, s] },
                  wrapper_html: { class: "mt-3 w-28" },
                  input_html: { class: "select-input" } %>
    <% end %>
    <div class="flex mt-3">
      <%= f.input :password, label: false, placeholder: "Password",
                  wrapper_html: { class: "mr-3" },
                  input_html: { class: "basic-input" } %>
      <%= f.input :password_confirmation, label: false, placeholder: "Password confirmation",
                  input_html: { class: "basic-input" } %>
    </div>

    <%= f.button :submit, class: "bg-slate-700 submit-btn" %>
  <% end %>
</div>